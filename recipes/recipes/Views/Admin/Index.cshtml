@model IEnumerable<Recipe>
@{ ViewData["Title"] = "Index";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<h2>Yemek Tarif Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.Id</td>
    <td>@x.Name</td>
    <td><a href='/Admin/DeleteRecipe/@x.Id' class="btn btn-danger">Sil</a></td>
    <td><a href='/Admin/GetRecipe/@x.Id' class="btn btn-warning">Güncelle</a></td>
</tr>}
</table>
<a href='/Admin/NewRecipe' class="btn btn-primary">Tarif Ekle</a>