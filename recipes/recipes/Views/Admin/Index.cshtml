@model IEnumerable<Recipe>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Yemek Tarif Listesi</h2>
<br/>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach(var x in Model) {
    <tr>
        <td>@x.Id</td>
        <td>@x.Name</td>
        <td><a href='#' class="btn btn-danger">Sil</a></td>
        <td><a href='#' class="btn btn-warning">Güncelle</a></td>
        <td><a href='#' class="btn btn-info">Detaylar</a></td>
    </tr>
    }
</table>
<a href ='/Admin/NewRecipe' class="btn btn-primary">Tarif Ekle</a>

