@model recipes.Models.Category
@{ ViewData["Title"] = "NewCategory";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h2>Yeni Kategori Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ImageUrl)
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kategori Ekle</button>
</form>
